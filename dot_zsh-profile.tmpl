# --- Options section
# -----------------------------------------------------------------------------
fpath=("${HOME}/.local/share/zsh/completions" "$fpath[@]")      # Add local ZSH completion files

setopt correct                                                  # Auto correct mistakes
setopt extendedglob                                             # Extended globbing. Allows using regular expressions with *
setopt nocaseglob                                               # Case insensitive globbing
setopt rcexpandparam                                            # Array expension with parameters
setopt numericglobsort                                          # Sort filenames numerically when it makes sense
setopt nobeep                                                   # No beep
setopt appendhistory                                            # Immediately append history instead of overwriting
setopt histignorealldups                                        # If a new command is a duplicate, remove the older one
setopt autocd                                                   # if only directory path is entered, cd there.

zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'       # Case insensitive tab completion
zstyle ':completion:*' list-colors "rs=0:di=01;34:ln=01;36:mh=00:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:mi=00:su=37;41:sg=30;43:ca=30;41:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arc=01;31:*.arj=01;31:*.taz=01;31:*.lha=01;31:*.lz4=01;31:*.lzh=01;31:*.lzma=01;31:*.tlz=01;31:*.txz=01;31:*.tzo=01;31:*.t7z=01;31:*.zip=01;31:*.z=01;31:*.dz=01;31:*.gz=01;31:*.lrz=01;31:*.lz=01;31:*.lzo=01;31:*.xz=01;31:*.zst=01;31:*.tzst=01;31:*.bz2=01;31:*.bz=01;31:*.tbz=01;31:*.tbz2=01;31:*.tz=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.war=01;31:*.ear=01;31:*.sar=01;31:*.rar=01;31:*.alz=01;31:*.ace=01;31:*.zoo=01;31:*.cpio=01;31:*.7z=01;31:*.rz=01;31:*.cab=01;31:*.wim=01;31:*.swm=01;31:*.dwm=01;31:*.esd=01;31:*.jpg=01;35:*.jpeg=01;35:*.mjpg=01;35:*.mjpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.svg=01;35:*.svgz=01;35:*.mng=01;35:*.pcx=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.m2v=01;35:*.mkv=01;35:*.webm=01;35:*.ogm=01;35:*.mp4=01;35:*.m4v=01;35:*.mp4v=01;35:*.vob=01;35:*.qt=01;35:*.nuv=01;35:*.wmv=01;35:*.asf=01;35:*.rm=01;35:*.rmvb=01;35:*.flc=01;35:*.avi=01;35:*.fli=01;35:*.flv=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.yuv=01;35:*.cgm=01;35:*.emf=01;35:*.ogv=01;35:*.ogx=01;35:*.aac=00;36:*.au=00;36:*.flac=00;36:*.m4a=00;36:*.mid=00;36:*.midi=00;36:*.mka=00;36:*.mp3=00;36:*.mpc=00;36:*.ogg=00;36:*.ra=00;36:*.wav=00;36:*.oga=00;36:*.opus=00;36:*.spx=00;36:*.xspf=00;36:"         # Colored completion (different colors for dirs/files/etc)
zstyle ':completion:*' rehash true                              # automatically find new executables in path 
zstyle ':completion:*' menu select

# ---- Speed up completions
zstyle ':completion:*' accept-exact '*(N)'
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ~/.zsh/cache
zstyle ':bracketed-paste-magic' active-widgets '.self-*'        # Fix slow paste (https://github.com/zsh-users/zsh-autosuggestions/issues/276)
HISTFILE=~/.zhistory
HISTSIZE=10000
SAVEHIST=5000
WORDCHARS=${WORDCHARS//\/[&.;]}                                 # Don't consider certain characters part of the word

# --- Color section
# -----------------------------------------------------------------------------
export LESS_TERMCAP_mb=$'\E[01;32m'
export LESS_TERMCAP_md=$'\E[01;32m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;47;34m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;36m'
export LESS=-r

# --- Keybindings section
# -----------------------------------------------------------------------------
bindkey -e
bindkey '^[[7~' beginning-of-line                               # [Home] - Go to beginning of line
bindkey '^[[H' beginning-of-line                                # [Home] - Go to beginning of line
if [[ "${terminfo[khome]}" != "" ]]; then
  bindkey "${terminfo[khome]}" beginning-of-line                # [Home] - Go to beginning of line
fi
bindkey '^[[8~' end-of-line                                     # [End] - Go to end of line
bindkey '^[[F' end-of-line                                      # [End] - Go to end of line
if [[ "${terminfo[kend]}" != "" ]]; then
  bindkey "${terminfo[kend]}" end-of-line                       # [End] - Go to end of line
fi
bindkey '^[[2~' overwrite-mode                                  # [Insert] - Change mode
bindkey '^[[3~' delete-char                                     # [Delete] - Delete char
bindkey '^[[C'  forward-char                                    # [Right] - Move right
bindkey '^[[D'  backward-char                                   # [Left] - Move left
bindkey '^[[5~' history-beginning-search-backward               # [Page up] - Search backward with word
bindkey '^[[6~' history-beginning-search-forward                # [Page down] - Search forward with word

bindkey '^[Oc' forward-word                                     # [Ctrl+Right] - Move next right word
bindkey '^[Od' backward-word                                    # [Ctrl+Left] - Move next left word
bindkey '^[[1;5D' backward-word                                 # [Ctrl+Right] - Move next right word
bindkey '^[[1;5C' forward-word                                  # [Ctrl+Left] - Move next left word
bindkey '^H' backward-kill-word                                 # [Ctrl+Delete] - Delete previous word with ctrl+backspace
bindkey '^[[Z' undo                                             # [Shift+Tab] - Undo last action

# --- Utility configuration
# -----------------------------------------------------------------------------

# ---- p10k override
typeset -g POWERLEVEL9K_PROMPT_CHAR_{OK,ERROR}_VIINS_CONTENT_EXPANSION='❯'
typeset -g POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(
  # =========================[ Line #1 ]=========================
  os_icon                 # os identifier
  dir                     # current directory
  vcs                     # git status
  # =========================[ Line #2 ]=========================
  newline                 # \n
  prompt_char             # prompt symbol
)

# remove '❯' on copy/paste
alias '❯'=''

# ---- ASDF
(( ! ${+commands[asdf]} )) && source "${HOME}/.asdf/asdf.sh"
(( ${+commands[asdf]} )) && fpath+=(${ASDF_DIR}/completions $fpath)

# ---- Bitwarden
if (( ${+commands[bw]} )); then
  [[ -f "${HOME}/.local/share/zsh/completions/_bw" ]] || (
    mkdir -p "${HOME}/.local/share/zsh/completions"
    bw completion --shell zsh > "${HOME}/.local/share/zsh/completions/_bw"
  )
  alias bw_session='export BW_SESSION=$(bw unlock --raw)'
fi

# ---- Direnv
# NOTE: must be used before all, in order to manage custom environment
# eval $(direnv hook zsh)
(( ${+commands[direnv]} )) && source <(direnv hook zsh)

# ---- Fzf
(( ! ${+commands[fzf]} )) && source ~/.fzf.zsh

# --- Custom variables/paths
# -----------------------------------------------------------------------------
export EDITOR="vim"
export VISUAL="vim"
export TF_PLUGIN_CACHE_DIR="$HOME/.terraform.d/plugin-cache" 

export GOROOT="${HOME}/.asdf/installs/golang/$(asdf current golang | awk {{ "'{{ print $2 }}'" }})/go"
export GOPATH=~/.go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# --- Custom aliases
# -----------------------------------------------------------------------------
# ---- Fasd
if (( ${+commands[fasd]} )); then
  source <(command fasd --init auto)

  alias a='fasd -a'        # any
  alias s='fasd -si'       # show / search / select
  alias d='fasd -d'        # directory
  alias f='fasd -f'        # file
  alias sd='fasd -sid'     # interactive directory selection
  alias sf='fasd -sif'     # interactive file selection

  alias z='fasd_cd -d'     # cd, same functionality as j in autojump
  alias zz='fasd_cd -d -i' # cd with interactive selection
fi

# ---- K9s
alias k9s="k9s --readonly"
alias k9sx="k9s --readonly=false"

# ---- Kitty
alias kycat="kitty +kitten icat"
alias kydiff="kitty +kitten diff"

# ---- Kubernetes
alias k="kubectl"
alias kn="kubectl config set-context --current --namespace"
alias kx="kubectl config use-context"
((( ${+commands[kubectl]} )) && [[ ! -f "${HOME}/.local/share/zsh/completions/_kubectl" ]]) && kubectl completion zsh > "${HOME}/.local/share/zsh/completions/_kubectl" 


# ---- Utility
alias ls='ls --color=auto'
alias la='ls -la'
alias grep='grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'
alias wt='while true; do clear; task; sleep 1; done'
